<body>
  <header>
    <h3>"<%= @facade.query %>" Results</h3>
  </header>

  <% if @facade.food_search == [] %>
    <p><b>No matches found</b></p>
  <% else %>
    <section id="food_results">
      <div id="total_results">
        <p><b>Total Results: </b><%= @facade.total_results %></p>
      </div>

      <div>
        <p><b>First 10 Results</b></p>
        <table>
          <tr>
            <th>GTIN/UPC Code</th>
            <th>Description</th>
            <th>Brand Owner</th>
            <th>Ingredients</th>
          </tr>

        <% @facade.food_search.each do |food| %>
          <tr class="food">
            <td><%= food.code %></td>
            <td><%= food.description %></td>
            <td><%= food.brand_owner %></td>
            <td><%= food.ingredients %></td>
          </tr>
        <% end %>
        </table>
      </div>
    </section>
  <% end %>
</body>